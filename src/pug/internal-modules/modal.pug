			.modal-body
				span(class='video-filter-modal__close-modal'): img(src="https://img.betanysports.eu/landing/videos/X.svg", alt="close" data-bs-dismiss='modal' aria-label='Close')
				video(id='videoElement1' width='100%' height='auto' controls autoplay loop muted)
					source(src='video/buying_bitcoin_cash_app_tutorial.mp4' type='video/mp4')

